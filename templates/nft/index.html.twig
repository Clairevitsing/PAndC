{% extends 'base.html.twig' %}

{% block title %}NFT index{% endblock %}

{% block body %}
    <h1>NFT index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Img</th>
                <th>Description</th>
                <th>Launch_date</th>
                <th>Launch_price_eur</th>
                <th>Launch_price_eth</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nft in nfts %}
            <tr>
                <td>{{ nft.id }}</td>
                <td>{{ nft.name }}</td>
                <td>{{ nft.img }}</td>
                <td>{{ nft.description }}</td>
                <td>{{ nft.launchDate ? nft.launchDate|date('Y-m-d') : '' }}</td>
                <td>{{ nft.launchPriceEur }}</td>
                <td>{{ nft.launchPriceEth }}</td>
                <td>
                    <a href="{{ path('app_nft_show', {'id': nft.id}) }}">show</a>
                    <a href="{{ path('app_nft_edit', {'id': nft.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_nft_new') }}">Create new</a>
{% endblock %}