{% extends 'base.html.twig' %}

{% block title %}NftCollection index{% endblock %}

{% block body %}
    <h1>NftCollection index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nft_collection in nft_collections %}
            <tr>
                <td>{{ nft_collection.id }}</td>
                <td>{{ nft_collection.name }}</td>
                <td>{{ nft_collection.description }}</td>
                <td>
                    <a href="{{ path('app_nft_collection_show', {'id': nft_collection.id}) }}">show</a>
                    <a href="{{ path('app_nft_collection_edit', {'id': nft_collection.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_nft_collection_new') }}">Create new</a>
{% endblock %}
